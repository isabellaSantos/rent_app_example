<h2><%= plural_resource_name(ManageProduct) %></h2>

<div class="card-panel">
  <table class="responsive-table">
    <thead>
    <th><%= human_attribute_name ManageProduct, :number %></th>
    <th><%= human_attribute_name ManageProduct, :product_id %></th>
    <th><%= human_attribute_name ManageProduct, :state %></th>
    <th></th>
    </thead>
    <tbody>
    <% @manage_products.each do |product| %>
        <tr>
          <td><%= product.number %></td>
          <td><%= product.product.name %></td>
          <td><%= render_state_label product.state %></td>
          <td>
            <%= link_to t(:edit), edit_manage_product_path(product),
                        class: 'btn btn-small blue darken-4 white-text' if can? :manage, ManageProduct %>
            <%= link_to t(:destroy), manage_product_path(product),
                        class: 'btn btn-small red darken-4 white-text', method: :delete if can? :manage, ManageProduct   %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

