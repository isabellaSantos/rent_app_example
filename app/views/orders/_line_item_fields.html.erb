<div class="nested-fields">
  <div class="row">
    <div class="input-field col s5">
      <%= f.select :product_id, options_for_select(Product.all.map { |pc| [pc.name, pc.id] }),
                   {}, class: 'browser-default' %>
    </div>
    <div class="input-field col s5">
      <%= f.text_field :total, placeholder: human_attribute_name(LineItem, :total)  %>
      <%= f.label :total %>
    </div>
    <div class="input-field col s2">
      <%= link_to_remove_association t(:remove_line_item), f,
                                     class: 'btn waves-effect waves-light red darken-4 white-text' %>
    </div>
  </div>
</div>